{
  "name": "video-chat-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:https": "next dev --turbopack --experimental-https --experimental-https-key ./localhost-key.pem --experimental-https-cert ./localhost.pem",
    "build": "next build --turbopack",
    "typecheck": "tsc --noEmit",
    "prebuild": "next lint && npm run typecheck",
    "start": "next start",
    "lint": "eslint",
    "server": "node server.js",
    "dev:full": "concurrently \"npm run server\" \"npm run dev\"",
    "dev:full:https": "concurrently \"npm run server\" \"npm run dev:https\"",
    "setup:https": "setup-https.bat",
    "test:webrtc": "echo 'Open https://localhost:3000/test-webrtc to test WebRTC functionality'"
  },
  "dependencies": {
    "@types/simple-peer": "^9.11.8",
    "@types/uuid": "^10.0.0",
    "lucide-react": "^0.544.0",
    "net": "^1.0.2",
    "next": "15.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.5.3",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
